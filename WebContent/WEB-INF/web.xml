<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- $Id$ -->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Hierarchy</display-name>
    <filter>
        <filter-name>Instrumentation</filter-name>
        <filter-class>com.zoho.instrument.InstrumentFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Instrumentation</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AccessLogFilter</filter-name>
        <filter-class>com.zoho.logs.logclient.filter.AccessLogFilter</filter-class>
        <init-param>
            <param-name>logClientName</param-name>
            <param-value>com.adventnet.iam.logging.IAMAccessLogImpl</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AccessLogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.adventnet.iam.security.SecurityFilter</filter-class>
        <init-param>
            <param-name>development.mode</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>exclude</param-name>
            <param-value>
                /sasupgrade
            </param-value>
        </init-param>
        <init-param>
            <param-name>config-file</param-name>
            <param-value>conf/security-common.xml,conf/security-sas.xml,conf/security-properties.xml,security-hierarchy.xml</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>ServerHealthCheckFilter</filter-name>
        <filter-class>com.zoho.sas.filter.ServerHealthCheckFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ServerHealthCheckFilter</filter-name>
        <url-pattern>/_app/health</url-pattern>
    </filter-mapping>
    <!-- Filter to switch to ZSOID space based on request -->
    <filter>
        <filter-name>SASFilter</filter-name>
        <filter-class>com.adventnet.sas.security.filter.DBAssociator</filter-class>
        <init-param>
            <param-name>skip</param-name>
            <param-value>
                /v1_0/.*\.png|/v1_0/.*\.jpg|/v1_0/.*\.js|/v1_0/.*\.css|/v1_0/.*\.gif|/login/StatisticsProvider
            </param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SASFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- Listener added for Standard Web container Model - This will load the
        app modules and services -->
    <listener>
        <listener-class>com.zoho.sas.container.SASContextListener</listener-class>
    </listener>
    <!--    To collect application-specific statistics like DB Connections, Redis Connections, User Sessions etc.,-->
    <servlet>
        <servlet-name>com.zoho.sas.servlet.StatisticsProviderServlet</servlet-name>
        <servlet-class>com.zoho.sas.servlet.StatisticsProviderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.zoho.sas.servlet.StatisticsProviderServlet</servlet-name>
        <url-pattern>/login/StatisticsProvider</url-pattern>
    </servlet-mapping>
    <!--    To perform ISU and dataspace related operations (development mode) via GAC-->
    <servlet>
        <servlet-name>com.zoho.sas.servlet.DBUpgradeServlet</servlet-name>
        <servlet-class>com.zoho.sas.servlet.DBUpgradeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.zoho.sas.servlet.DBUpgradeServlet</servlet-name>
        <url-pattern>/login/upgradeaction</url-pattern>
    </servlet-mapping>
    <!--    To perform ISU automatically via ZAC-->
    <servlet>
        <servlet-name>com.zoho.sas.servlet.DataUpgradeServlet</servlet-name>
        <servlet-class>com.zoho.sas.servlet.DataUpgradeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.zoho.sas.servlet.DataUpgradeServlet</servlet-name>
        <url-pattern>/sasupgrade</url-pattern>
    </servlet-mapping>
    <!-- RESTful Jax-rs servlet -->

    <!-- RestAPI filter Starts -->

    <servlet>
        <servlet-name>RestServlet</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com.*</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>RestServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>


    <!-- Jax-rs servlet mapping ends -->


    <error-page>
        <error-code>400</error-code>
        <location>/_servererror</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/_servererror</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/_servererror</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/_servererror</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/_servererror</location>
    </error-page>
    <error-page>
        <error-code>408</error-code>
        <location>/_servererror</location>
    </error-page>
    <error-page>
        <error-code>413</error-code>
        <location>/_servererror</location>
    </error-page>
    <error-page>
        <error-code>414</error-code>
        <location>/_servererror</location>
    </error-page>
    <error-page>
        <error-code>429</error-code>
        <location>/_servererror</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/_servererror</location>
    </error-page>
    <error-page>
        <error-code>505</error-code>
        <location>/_servererror</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/_servererror</location>
    </error-page>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <session-config>
        <session-timeout>-1</session-timeout>
    </session-config>

</web-app>